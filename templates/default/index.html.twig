{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <a href="{{ path('settings_money') }}">Available money </a>
    <div class="container d-flex">
        <form method="post" class="me-auto ms-auto mt-2">
            {{ form_start(form) }}
            <div>
                {{ form_row(form.currency) }}
            </div>
            <div>
                {{ form_row(form.amount) }}
            </div>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
